@model WebLibCs.Web.ViewModels.Libro.LibroDetailsViewModel

@{
    ViewData["Title"] = "Detalles";
}

<h1>Detalles</h1>

<div>
    <h4>Libro</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Título
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Titulo)
        </dd>
        <dt class = "col-sm-2">
            Año de Publicación
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AnioPublicacion)
        </dd>
        <dt class = "col-sm-2">
            Autor
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AutorNombre)
        </dd>
        @if (!string.IsNullOrEmpty(Model.ImagenRuta)) //Mostrar la imagen actual
        {
            <div class="form-group">
                <b>Portada:</b><br />
                <img src="@Model.ImagenRuta" alt="Portada actual" style="width:100px;height:auto;" />
            </div>
        }
    </dl>
</div>
<div class="d-flex gap-2 align-items-center">
    <a asp-action="Edit" asp-route-id="@Model.Id" 
       class="btn btn-outline-secondary action-icon" 
       title="Editar @Model.Titulo" 
       aria-label="Editar @Model.Titulo">
        <i class="bi bi-pencil-square"></i>
        <span class="visually-hidden">Editar</span>
    </a>
    <a asp-action="Index" class="btn btn-outline-primary">
        <i class="bi bi-arrow-left me-1"></i>Volver a la Lista
    </a>
</div>

@model WebLibCs.Web.ViewModels.Libro.LibroIndexViewModel

@{
    ViewData["Title"] = "Libros";
}

<h1>Libros</h1>

<p>
    <a asp-action="Create">Nuevo Libro</a>
</p>

<!-- Formulario de búsqueda -->
<form asp-action="Index" method="get" class="form-inline mb-3">
    <div class="form-group">
        <input type="text" name="searchString" value="@Model.SearchTerm" class="form-control" placeholder="Buscar libros por título..." />
    </div>
    <button type="submit" class="btn btn-primary mt-2" title="Buscar" aria-label="Buscar">
        <i class="bi bi-search"></i>
        <span class="visually-hidden">Buscar</span>
    </button>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                Imagen
            </th>
            <th>
                Título
            </th>
            <th>
                Año de Publicación
            </th>
            <th>
                Autor
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.LibrosList) {
        <tr>
            <td>
                @if (!string.IsNullOrEmpty(item.ImagenRuta))
                {
                    <img src="@item.ImagenRuta" alt="Portada de @item.Titulo" style="width:50px;height:auto;" class="img-thumbnail" />
                }
                else
                {
                    <span class="text-muted">Sin imagen</span>
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Titulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AnioPublicacion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AutorNombre)
            </td>
            <td>
                <partial name="_ActionButtons" model="new WebLibCs.Web.ViewModels.ActionButtons.ActionButtonsViewModel 
                { 
                    Id = item.Id, 
                    ItemTitle = item.Titulo 
                }" />
            </td>
        </tr>
    }
    </tbody>
</table>

<nav aria-label="Paginación de libros">
    <ul class="pagination">
        @{
            int currentPage = Model.CurrentPage;
            int totalPages = Model.TotalPages;
            string currentFilter = Model.SearchTerm ?? "";
        }

        @for (int i = 1; i <= totalPages; i++)
        {
            <li class="page-item @(i == currentPage ? "active" : "")">
                <a class="page-link"
                   asp-action="Index"
                   asp-route-page="@i"
                   asp-route-searchString="@currentFilter">
                    @i
                </a>
            </li>
        }
    </ul>
</nav>


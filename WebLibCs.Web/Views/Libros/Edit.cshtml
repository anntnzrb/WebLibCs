@model WebLibCs.Web.ViewModels.Libro.EditLibroViewModel

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar</h1>

<h4>Libro</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Titulo" class="control-label"></label>
                <input asp-for="Titulo" class="form-control" />
                <span asp-validation-for="Titulo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AnioPublicacion" class="control-label"></label>
                <input asp-for="AnioPublicacion" class="form-control" />
                <span asp-validation-for="AnioPublicacion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AutorId" class="control-label"></label>
                <select asp-for="AutorId" class="form-control" asp-items="new SelectList(Model.AutoresList, nameof(AutorDto.Id), nameof(AutorDto.Nombre))"></select>
                <span asp-validation-for="AutorId" class="text-danger"></span>
            </div>
            @if (!string.IsNullOrEmpty(Model.ImagenRutaActual)) //Mostrar la imagen actual antes del input
            {
                <div class="form-group">
                    <label>Portada actual:</label><br />
                    <img src="@Model.ImagenRutaActual" alt="Portada actual" style="width:100px;height:auto;" />
                </div>
            }
            <div class="form-group">
                <label class="control-label">Cambiar portada</label>
                <input type="file" asp-for="ImagenArchivo" name="ImagenArchivo" class="form-control" />
            </div>
            <div class="form-group">
                <input  type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a la Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
